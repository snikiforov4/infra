{
  "variables": {
    "project_id": null,
    "source_image_family": null,
    "machine_type": "f1-micro",
    "zone": "europe-west1-b"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "disk_size": 10,
      "disk_type": "pd-standard",
      "image_name": "reddit-app-base-{{timestamp}}",
